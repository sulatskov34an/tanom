<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/search_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/shimmer_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_auto_start="true"
            app:shimmer_base_alpha="1"
            android:visibility="gone"
            app:shimmer_highlight_alpha="0.5"
            app:shimmer_highlight_color="@color/color_main_background">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/search_rr_sh"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/color_main_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <RelativeLayout
                        android:id="@+id/rl_search_sh"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_corner_bg"
                        android:elevation="16dp">

                        <ImageView
                            android:id="@+id/filter_search_btn_sh"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:elevation="8dp"
                            app:srcCompat="@drawable/ic_search_gray" />

                        <EditText
                            android:id="@+id/filter_search_et_sh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/filter_search_btn_sh"
                            android:background="@null"
                            android:enabled="false"
                            android:hint="@string/search"
                            android:imeOptions="actionSearch"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/filter_iv_sh"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_filters" />

                    </RelativeLayout>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/shimmer_ads_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_main_background"
                    android:overScrollMode="never" />
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>


        <FrameLayout
            android:id="@+id/no_internet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@drawable/no_internet" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/search_rr"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/color_main_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <RelativeLayout
                android:id="@+id/rl_search"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_corner_bg"
                android:elevation="16dp">

                <ImageView
                    android:id="@+id/filter_search_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:elevation="8dp"
                    app:srcCompat="@drawable/ic_search_gray" />

                <EditText
                    android:id="@+id/filter_search_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/filter_search_btn"
                    android:background="@null"
                    android:hint="@string/search"
                    android:imeOptions="actionSearch"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/filter_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_filters" />

            </RelativeLayout>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ads_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_main_background"
            android:overScrollMode="never"
            android:paddingBottom="60dp"/>

    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>